{
  "functions": {
    "api/sitemap.js": {
      "maxDuration": 10
    },
    "api/index.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
}

